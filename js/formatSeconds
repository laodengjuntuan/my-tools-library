function formatSeconds(total) {
    let sec = Math.floor(total % 60)
    let min = Math.floor(total / 60 % 60)
    let hour = Math.floor(total / 3600)
    sec = sec < 10 ? '0' + sec : sec
    min = min < 10 ? '0' + min : min
    hour = hour < 10 ? '0' + hour : hour
    return hour + ':' + min + ':' + sec
}
